<?xml version="1.0" encoding="UTF-8"?>
<configuration  scan="true" scanPeriod="60 seconds" debug="false">
    <contextName>logback</contextName>
    <property name="log.path" value="./log/app.log" />
    <!--输出到控制台-->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <!-- <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
             <level>ERROR</level>
         </filter>-->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %contextName [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--输出到文件-->
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logback.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %contextName [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>


    <logger name="java.sql.Connection" value="DEBUG"/>
    <logger name="java.sql.ResultSet" value="DEBUG"/>
    <logger name="java.sql.PreparedStatement" value="DEBUG"/>
    <logger name="java.sql.Statement" value="DEBUG"/>

    <!--指定dao所在目录地址-->
    <logger name="com.ruiyi.platform.em" level="debug" />
    <logger name="com.ruiyi.platform.core" level="debug" />
    <logger name="com.ruiyi.platform.utils" level="debug" />


    <root level="info">
        <appender-ref ref="console" />
        <appender-ref ref="file" />
    </root>

